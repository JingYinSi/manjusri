<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <meta name="format-detection" content="telphone=no,email=no" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="stylesheet" href="/css/lordVirtues.css">
    <title>我的信息</title>
    <script src="/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript">
        function save() {
            var dataToUpdate = {
                name : $('#txtName').val(),
                realname : $('#txtRealname').val(),
                phone:$('#txtPhone').val(),
                email:$('#txtEmail').val(),
                addr : $('#txtAddr').val()
            };

            var url = '/jingyin/manjusri/lords/{{openid}}/profile';

            $.ajax({
                url: url,
                type: 'PUT',
                data:dataToUpdate
            }).done(function(data){
                window.location =  '/jingyin/manjusri/lordvirtues';
            }).fail(function(){
                alert('保存失败.')
            }).always(function(){
                //alert('completed!');
            });
        }

        function cancel(){
            window.location =  '/jingyin/manjusri/lordvirtues';
        }
    </script>
</head>

<body>
<main id="page" class="page-wrap">
    <div class="page">
        <div class="content">
            <div class="media-list media-list--after-v  media-item--custom-my">
                <div class="media-item">
                    <div class="item-bd">
                        <a href="javascript:void(0)">
                            <h4 class="bd-tt">头像</h4>
                        </a>
                    </div>
                    <img src="{{lord.img}}" class="item-img" width="60px" height="60px">
                </div>
            </div>
        </div>
        <div class="content">
            <ul class="line-list line-list--indent line-list--flex">
                <li class="line-item">
                    <i class="icon-info"></i>
                    <p class="item-tt">昵称</p>
                    <span class="item-append"><input class="editor" id="txtName" type="text" value="{{name}}"/></span>
                </li>

                <li class="line-item">
                    <i class="icon-info"></i>
                    <p class="item-tt">真实姓名</p>
                    <span class="item-append"><input class="editor" id="txtRealname" type="text" value="{{realname}}"/></span>
                </li>
            </ul>
            <ul class="line-list line-list--indent line-list--flex">
                <li class="line-item">
                    <i class="icon-info"></i>
                    <p class="item-tt">手机号</p>
                    <span class="item-append"><input class="editor" id="txtPhone" type="text" value="{{phone}}"/></span>
                </li>
                <li class="line-item">
                    <i class="icon-info"></i>
                    <p class="item-tt">邮箱</p>
                    <span class="item-append"><input class="editor" id="txtEmail" type="text" value="{{email}}"/></span>
                </li>
                <li class="line-item">
                    <i class="icon-info"></i>
                    <p class="item-tt">地址</p>
                    <span class="item-append"><input class="editor" id="txtAddr" type="text" value="{{addr}}"/></span>
                </li>
            </ul>
            <div>&nbsp;</div>
            <div class="form-tool">
                <div align="center">
                    <input type="button" class="ok" value="确认" onclick="save()"/>
                    <input type="button" class="ok" value="取消" onclick="cancel()"/>
                </div>
            </div>
            <div class="card-list card-list--gap card-list--custom">
                <div class="card-item ">
                    <img src="/images/logo.png" alt="" class="item-img" width="80">
                </div>
                <span class="item-tt">Copyright @2017 The Jin Yin Temple</span>
            </div>
        </div>
    </div>
</main>

