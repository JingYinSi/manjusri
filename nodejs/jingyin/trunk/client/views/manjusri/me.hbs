<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>我</title>
    <link href="/assets/css/reset.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/me.css" rel="stylesheet">
    <link href="/assets/css/jw.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .left {
            position: absolute;
            left: 0;
            top: 0;
            width: 70px;
        }

        .center {

            width: auto; /*如果没有这一句，那么，center这个div的文字就不会自动换行*/
            margin: 0 30px 0 70px;

        }

        .right {
            position: absolute;
            top: 0;
            right: 0;
            width: 30px;

        }
    </style>

</head>
<body>
<div class="wrapper container-fluid">
    <!-- header -->
    <div class="row header mt0">
        <div class="headwrap">
            <div class="row">
                <div class="col-xs-10 headleft ofe" onclick="window.location = '{{links.profile}}';">
                    <div class="logoaImg">
                        <img src="{{lord.img}}" alt="" class="br40">
                    </div>
                    <span class="logoaTitle" style="font-size: 16px">
                        {{lord.name}}
                    </span>
                </div>
                <div class="col-xs-2 headright ">
                    <span class="glyphicon glyphicon-chevron-right"
                          onclick="window.location = '{{links.profile}}';">
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- tabsMenu -->
    <div class="row  tabsMenu">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="col-xs-3 active">
                <a href="#count" aria-controls="count" role="tab" data-toggle="tab" class="plr0imp">
                    <div class="tabsMenuIcon">
                        <img src="/assets/images/icon1.png" alt="">
                    </div>
                    捐助
                </a>
            </li>
            <li class="col-xs-3 ">
                <a href="#rank" aria-controls="rank" role="tab" data-toggle="tab" class="plr0imp">
                    <div class="tabsMenuIcon">
                        <img src="/assets/images/icon2.png" alt="">
                    </div>
                    共修
                </a>
            </li>
            <!--<li class="col-xs-3 "><a href="#sound" aria-controls="sound" role="tab" data-toggle="tab" class="plr0imp"><div class="tabsMenuIcon"><img src="/assets/images/icon3.png" alt=""></div>活动</a></li>
            <li class="col-xs-3 "><a href="#share" aria-controls="share" role="tab" data-toggle="tab" class="plr0imp"><div class="tabsMenuIcon"><img src="/assets/images/icon4.png" alt=""></div>义工</a></li>-->
        </ul>

    </div>
    <!-- Tab panes -->
    <div class="tab-content">
        <!-- 捐助 -->
        <div class="tab-pane fade in active count" id="count">
            <div class=" l50 mlr-15 plr15 bcfff c666 ">
                <div class="bb1seee" onclick="window.location = '{{links.daily}}';">
                    <img src="/assets/images/a.png" alt="" class="w20 p-r t-2">
                    <span class="dib w70 ">日行一善</span>
                    <span class="#ccc pull-right pr15">></span>
                </div>
                <div class="p15 pt0 tc">
                    <div class="row c999">
                        <div class="col-xs-4">期间</div>
                        <div class="col-xs-4">次数</div>
                        <div class="col-xs-4">金额</div>
                    </div>
                    <div class="row bb1seee">
                        <div class="col-xs-4 c999">今天</div>
                        <div class="col-xs-4">{{virtues.daily.thisday.count}}</div>
                        <div class="col-xs-4">￥{{virtues.daily.thisday.sum}}</div>
                    </div>
                    <div class="row bb1seee">
                        <div class="col-xs-4 c999">本月</div>
                        <div class="col-xs-4">{{virtues.daily.thisMonth.count}}</div>
                        <div class="col-xs-4">￥{{virtues.daily.thisMonth.sum}}</div>
                    </div>
                    <div class="row bb1seee">
                        <div class="col-xs-4 c999">累计</div>
                        <div class="col-xs-4">{{virtues.daily.total.count}}</div>
                        <div class="col-xs-4">￥{{virtues.daily.total.sum}}</div>
                    </div>
                </div>
            </div>

            <div class=" mlr-15 mt10 plr15  bcfff c666 ">
                <div class="h40 l40" onclick="window.location = '{{links.suixi}}';">
                    <img src="/assets/images/a.png" alt="" class="w20 p-r t-2">
                    <span class="dib w70">随缘项目</span>
                    <span class="#ccc pull-right pr15">></span>
                </div>
                <div class="bb1seee h30 fs14">
                    <div class="col-xs-6 plr0"><img src="/assets/images/a.png" alt="" class="w20 p-r t-2"> 总次数 <span
                            class="cf00 fw6 ">{{virtues.virtues.count}}</span></div>
                    <div class="col-xs-6 plr0"><img src="/assets/images/a.png" alt="" class="w20 p-r t-2"> 累计金额 <span
                            class="cf00 fw6 ">{{virtues.virtues.sum}}</span></div>
                </div>
                <div class="bcfff tl">
                    {{#each virtues.virtues.details}}
                        <div class=" p5 h60 ">
                            <figure class="col-xs-2 pl0">
                                <img src="{{img}}" alt="" class="w50">
                            </figure>
                            <div class="col-xs-10 bb1seee pb5">
                                <div class="dib ">
                                    <h4 class="m0 pt5 fs16 c000">{{subject}}</h4>
                                    <span class="fs12">￥{{amount}}</span>
                                </div>
                                <div class="dib pull-right fs12 c999">
                                    {{dateMMDD date}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="tc fs14 h60 l60"><a href="#" class="cff8c05">点击查看更多内容</a></div>
            </div>

        </div>

        <!-- 功课 -->
        <div class="tab-pane fade rank" id="rank">
            <ul class=" mt10 fs14">
                {{#each lessons}}
                    <li id="li_{{lesson._id}}" class=" ofa pt20 bcfff mlr-15 pl30">
                        <p class="fs20 fw7 ">{{lesson.name}}</p>
                        <p class="fl ">
                            <span id="join_{{lesson._id}}">{{join}}</span>人共修了
                            <span id="practice_{{lesson._id}}">{{practice}}</span>{{lesson.unit}}
                            我念诵了<span id="mypractice_{{lesson._id}}">{{me.practice}}</span>{{lesson.unit}}</p>
                        <p class="fr mr15">
                            <span id="flip_{{lesson._id}}" class="mr15 cff8c05 flip">报数</span>
                            <span class="glyphicon glyphicon-chevron-right cccc"></span>
                        </p>
                        <div class="fc"></div>
                        <div class="p-r">
                            <img src="{{lesson.img}}" alt="" class=" op04 w15 p-a le-22 t3">
                            <p class="fl c999"><span id="mybegdate_{{lesson._id}}">{{dateYYYYMMDD me.begDate}}</span> 开始
                            </p>
                        </div>
                        <div class="fc"></div>
                        <div class="pb20 pr20 panel mb0 dn">
                            <div class="p-r w100- fs14">
                                <div class="left l25"><img src="/assets/images/a.png" alt="" class="w20"> 报数</div>
                                <div class="center l25"><input id="input_{{lesson._id}}" type="number"
                                                               class="w100- bceee bn br2 pl5"></div>
                                <div class="right tr l25">{{lesson.unit}}</div>
                            </div>
                            <div class="mt10 fs14 l25">
                                <img src="/assets/images/a.png" alt="" class="w20"> 回向
                            </div>
                            <textarea class="form-control mt10 oln bceee mb20" rows="6"></textarea>
                            <button type="button" class="db bn br5 bcf5ecc3 w60- h40 mc sub"
                                    onclick="announce('{{links.self}}', '{{lesson._id}}')">确认
                            </button>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>

        <!--&lt;!&ndash; 活动 &ndash;&gt;
        <div class="tab-pane  fade sound" id="sound">
        </div>

        &lt;!&ndash; 义工 &ndash;&gt;
        <div class="tab-pane  fade share" id="share">
        </div>-->
    </div>
    <!-- 页脚 -->
    <footer>
        <figure>
            <img src="/assets/images/logo.png" alt="">
        </figure>
        <div class="copyright">
            Copyright @2016 The Jin Yin Temple
        </div>
    </footer>
    {{>footmenu}}
</div>


<script src="/js/jquery-3.1.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $(".flip").click(function () {
            $(this).closest("li").find(".panel").slideToggle();
            if ($(this).siblings(".glyphicon").hasClass("glyphicon-chevron-right")) {
                $(this).siblings(".glyphicon").removeClass("glyphicon-chevron-right").addClass("glyphicon-chevron-down");
            } else {
                $(this).siblings(".glyphicon").removeClass("glyphicon-chevron-down").addClass("glyphicon-chevron-right");
            }
        })
    });
    $(".sub").click(function () {
        $(this).closest("li").find(".flip").click();
    });

    function announce(url, inputid) {
        var num = Math.round($("#input_" + inputid).val() * 1);
        if (num == 0) return;
        $("#input_" + inputid).val('');
        $.ajax({
            url: url,
            method: 'POST',
            contentType: "application/json",
            data: JSON.stringify({num: num}),
            success: function () {
                $.ajax({
                    url: url,
                    method: 'GET',
                    contentType: "application/json",
                    success: function (result) {
                        if(result.data.me.practice === 0){
                            $("#li_" + inputid).remove();
                            return;
                        }
                        $("#join_" + inputid).text(result.data.join);
                        $("#practice_" + inputid).text(result.data.practice);
                        $("#mypractice_" + inputid).text(result.data.me.practice);
                        var d = result.data.me.begDate;
                        $("#mybegdate_" + inputid).text(d.getFullYear()
                                + '-' + ("0" + (d.getMonth() + 1)).slice(-2)
                                + '-' + ("0" + d.getDate()).slice(-2));
                        $("#flip_" + inputid).click();
                    }
                });
            }
        })
    }
</script>
</body>
</html>